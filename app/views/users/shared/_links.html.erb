<div class="mt-6 space-y-3 text-sm text-gray-600 text-center">
  <% if controller_name != 'sessions' %>
    <%= link_to "Iniciar sesión",
      new_session_path(resource_name),
      class: "text-orange-500 hover:text-orange-600 font-medium transition-colors" %>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div>
      <%= link_to "¿No tienes cuenta? Regístrate aquí",
        new_registration_path(resource_name),
        class: "text-orange-500 hover:text-orange-600 font-medium transition-colors" %>
    </div>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div>
      <%= link_to "¿Olvidaste tu contraseña?",
        new_password_path(resource_name),
        class: "text-gray-500 hover:text-orange-500 transition-colors" %>
    </div>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div>
      <%= link_to "¿No recibiste el correo de confirmación?",
        new_confirmation_path(resource_name),
        class: "text-gray-500 hover:text-orange-500 transition-colors" %>
    </div>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div>
      <%= link_to "¿No recibiste las instrucciones de desbloqueo?",
        new_unlock_path(resource_name),
        class: "text-gray-500 hover:text-orange-500 transition-colors" %>
    </div>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <div class="pt-4">
      <p class="text-gray-500 text-sm mb-2">O inicia sesión con:</p>
      <div class="flex justify-center gap-3 flex-wrap">
        <% resource_class.omniauth_providers.each do |provider| %>
          <%= button_to omniauth_authorize_path(resource_name, provider),
              data: { turbo: false },
              class: "flex items-center justify-center gap-2 px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-50 transition-all duration-200 w-40" do %>
            <% provider_name = case provider.to_s
              when 'google_oauth2' then 'Google'
              when 'github' then 'GitHub'
              when 'facebook' then 'Facebook'
              else OmniAuth::Utils.camelize(provider)
            end %>
            <span class="text-gray-700 text-sm font-medium">Iniciar con <%= provider_name %></span>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <p class="text-xs text-gray-400 mt-6">
    © <%= Date.current.year %> <span class="font-semibold text-gray-500">ERP+ Clientes</span> — Todos los derechos reservados
  </p>
</div>
